extends ../layout.pug

block content
  -
    const formatDate = (dateString) => {
      const date = new Date(dateString);
      return date.toLocaleString();
    }
  main
    section.post
      h1.visually-hidden Карточка поста
      section.post__content
        h2.visually-hidden #{offer.title}
        div.post__wrapper
          div.post__head
            a.post__backwards.button.button--backwards(href="#") Назад
            time.post__date(datetime={formatDate(offer.createdAt)}) #{formatDate(offer.createdAt)}
            h2.post__title.title.title--main AirPods в один клик
            each category of offer.categories
              li.themes__item: a.themes__item-link(href="#") #{category.name} <sup>88</sup>
                button.themes__remove-btn(type="button") Удалить категорию
            //- ul.post__themes.themes
            //-   li.themes__item: a.themes__item-link(href="#") Автомобили<sup>88</sup>
            //-     button.themes__remove-btn(type="button") Удалить категорию
            //-   li.themes__item: a.themes__item-link(href="#") Удаленная работа<sup>13</sup>
            //-     button.themes__remove-btn(type="button") Удалить категорию
            //-   li.themes__item: a.themes__item-link(href="#") Бизнес<sup>13</sup>
            //-     button.themes__remove-btn(type="button") Удалить категорию
          div.post__picture
            //- +categoryImage(category)
            img(src="img/#{offer.picture}" alt="пейзаж море, скалы, пляж")
          div.post__text
            h3 #{offer.announce}
            p #{offer.fullText}
      div.post__wrapper.post__wrapper--comments
        section.post__comments.comments
          h2.comments__title.title.title--middle Комментарии
          ul.comments__list
            each comment of offer.comments
              li.comments__comment
                div.comments__avatar.avatar
                  img(src="img/avatar-1.png" alt="аватар пользователя")
                div.comments__text
                  div.comments__head
                    p Евгений Петров •
                    time.comments__date(datetime="2019-03-21T20:33") 21.03.2019, 20:33
                  p.comments__message #{comment.text}
